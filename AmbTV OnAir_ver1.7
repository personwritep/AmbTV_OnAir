    let header_right=document.querySelector('.com-application-Header__right');
    if(header_right){
        let sw=
            '<div class="cms_sw">CM Mute</div>'+
            '<div class="cha_sw">Channel</div>'+
            '<style>'+
            '.com-application-Header__right { display: flex; flex-basis: 440px !important; } '+
